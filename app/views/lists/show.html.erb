<div class="media-body">
  <h4 class="media-heading">
<% if @list.nil? %>
   <%= link_to "New To-do List", new_list_path, class: 'btn btn-success' %>
<% elsif %>
    <p class="lead"><%= @list.title %></p>
    <%= link_to "Edit", edit_list_path, class: 'btn btn-success' %>
    <%= link_to "Delete", @list, method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure you want to delete this Topic?"} %>
 <% end %>
  </h4>
  <div class="row">
  <div class="col-md-8">
    <%= render partial: 'items/item', collection: @items %>
  <div class="col-md-8">
    <%= render partial: "items/form", locals: {list: @list} %>
   </div>
</div>
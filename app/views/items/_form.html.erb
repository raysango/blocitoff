<h4>Add Items</h4>
<%= form_for [list, list.items.new] do |f| %>
  <div class = "form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter item name" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>